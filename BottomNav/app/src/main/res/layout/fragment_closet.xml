<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#F5F5F5"
        android:gravity="center"
        android:text="@string/closet_title"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tab1"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/shape_style"
        android:gravity="center"
        android:text="@string/closet_tab1"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tab2"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_style"
        android:gravity="center"
        android:text="@string/closet_tab2"
        android:textColor="#000000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tab3"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_style"
        android:gravity="center"
        android:text="@string/closet_tab3"
        android:textColor="#000000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/search"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tab1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_style"
        android:drawableStart="@drawable/baseline_search_24"
        android:gravity="center"
        android:hint="@string/closet_search"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/closet"
        android:layout_width="match_parent"
        android:layout_below="@+id/search"
        android:layout_height="500dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_style"
        android:gravity="center"
        android:layout_alignParentEnd="true"/>


    <ImageView
        android:id="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/test1" />

    <ImageView
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="140dp"
        android:src="@drawable/test2" />

    <ImageView
        android:id="@+id/test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="240dp"
        android:src="@drawable/test3" />
</RelativeLayout>